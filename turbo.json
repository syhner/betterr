{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI"],
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist"]
    },
    "format:check": {
      "inputs": ["*.json", "*.md", "*.ts", "*.yml"]
    },
    "lint": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"],
      "outputs": ["coverage"]
    }
  }
}
